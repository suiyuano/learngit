<view class='page-header'>
   <!--text class='page-header-text'>{{title}}</text-->
    <input class='page-header-text' placeholder='输入搜索关键词' auto-focus bindchange='search'/>
</view>
<scroll-view class='page-body' scroll-y='true'>
  <navigator url='../movie/movie?id={{item.id}}' wx:for="{{movies}}">
    <view class='item'>
       <image class='poster' src='{{item.images.large}}'></image>
       <view class='meta'>
           <text class='title'>{{item.title}}</text>
             <text class='sub-title'>{{item.genres}}({{item.year}})</text>
             <text class='artists'><text wx:for='{{item.directors}}'>{{item.name}}</text>
             </text>
       </view>
       <view class='rating'>
         <text>{{item.rating.average}}</text>
       </view>
    </view>
  </navigator>
</scroll-view>